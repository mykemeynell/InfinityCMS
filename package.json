{
    "name": "infinity-cms",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "css": "postcss ./resources/css/infinity.css -o ./publishable/assets/css/infinity.css",
        "build-dev": "npm run css && npm run development",
        "build": "npm run css && npm run production",
        "dev": "npm run development",
        "development": "mix",
        "production": "mix --production",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.0",
        "laravel-mix-purgecss": "^6.0.0",
        "postcss": "^8.4.0",
        "postcss-cli": "^9.0.2",
        "postcss-import": "^14.0.2",
        "redux-devtools": "^3.7.0",
        "tailwindcss": "^2.2.19"
    },
    "dependencies": {
        "@themesberg/flowbite": "^1.3.0",
        "jquery": "^3.6.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "sweetalert2": "^11.3.10"
    }
}
